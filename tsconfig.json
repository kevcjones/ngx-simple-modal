{
  "compileOnSave": true,
  "compilerOptions": {
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "moduleResolution": "node",
    "removeComments": true,
    "sourceMap": true,
    "outDir": "dist",
    "declarationDir": "dist",
    "declaration": true,
    "target": "es2015",
    "lib": [
      "es2019",
      "dom"
    ]
  },
  "include": [
    "src/**/*"
, "tsconfig.spec.json"  ],
  "exclude": [
    "demo-ng5",
    "demo_ng6",
    "demo_ng16",
    "index.d.ts",
    "node_modules",
    "dist"
  ],
  "angularCompilerOptions": {
    "genDir": "dist/",
    "strictMetadataEmit": true,
    "skipTemplateCodegen": true
  }
}
